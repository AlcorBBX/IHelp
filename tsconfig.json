{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",

    "typeRoots": ["node_modules/@types", "types/"],

    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "entities/*": ["entities/*"],
      "features/*": ["features/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "dom"],

    "strict": true,

    "types": ["node", "vite/client"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "types"
  ]
  // "paths": {
  //   "*": ["./src/*"]
  // }
}
